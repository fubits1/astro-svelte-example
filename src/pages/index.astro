---
// Component Imports
import Hero from '@components/Hero.svelte';
import Counter from '@components/Counter.svelte';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <style>
      html,
      body {
        font-family: system-ui;
        margin: 0;
      }

      body {
        background: white;
      }
    </style>
  </head>

  <body>
    <main>
      <Hero client:visible>
        <div class="content">
          <h1>Hi <a href="https://astro.build/">Astro</a></h1>
          <div>
            <a href="/lazyload">Lazyload A</a><a href="/lazyload2">Lazyload B</a><a
              href="/lazyload2">Lazyload C</a>
          </div>
        </div>
      </Hero>
      <Counter client:idle>Hello, <a href="https://svelte.dev/">Svelte!</a></Counter>
    </main>
  </body>
</html>

<style>
  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .content div {
    display: flex;
    gap: 1rem;
  }
</style>
